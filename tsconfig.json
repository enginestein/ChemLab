{
  "compilerOptions": {
    "target": "ES6",                         
    "module": "ES6",                          
    "declaration": true,                     
    "outDir": "./dist",                      
    "strict": false,                          
    "esModuleInterop": true,                
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
